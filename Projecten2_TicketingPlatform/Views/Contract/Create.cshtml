@model Projecten2_TicketingPlatform.Models.ContractViewModels.EditViewModel

@{
    ViewData["Title"] = "Create";
}
 
<h1>Nieuw contract aanvragen</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContractTypeId" class="control-label"></label>
                <select asp-for="ContractTypeId" asp-items=@(ViewData["contractTypes"] as SelectList) class="form-control">
                    <option value="0">--selecteer type--</option>
                </select>                
                <span asp-validation-for="ContractTypeId" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <label asp-for="Startdatum" class="control-label"></label>
                <input asp-for="Startdatum" class="form-control" />
                <span asp-validation-for="Startdatum" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Doorlooptijd" class="control-label"></label>
                <div class="input-group">
                    <select asp-for="Doorlooptijd" class="form-control">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>

                    <div class="input-group-append">
                        <span class="input-group-text">jaar</span>
                    </div>
                </div>
                <span asp-validation-for="Doorlooptijd" class="text-danger"></span>                
            </div>
            <div class="form-group">
                    <button class="btn btn-secondary" type="submit">Aanvraag indienen</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar lijst</a>
</div>

