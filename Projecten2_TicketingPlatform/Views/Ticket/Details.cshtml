@model Projecten2_TicketingPlatform.Models.Domein.Ticket

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ticketid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticketid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatumAanmaken)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumAanmaken)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Omschrijving)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Omschrijving)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypeTicket)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeTicket)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KlantId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KlantId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TechniekerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TechniekerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opmerkingen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opmerkingen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bijlage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bijlage)
        </dd>
    </dl>
    @if (!(@Model.Status == TicketStatus.Geannuleerd || @Model.Status == TicketStatus.Afgehandeld))
    {<div>
            <a asp-controller="Ticket" asp-action="Edit" asp-route-ticketId="@Model.Ticketid">Bewerken</a> | 
            <a asp-controller="Ticket" asp-action="Annuleer" asp-route-ticketId="@Model.Ticketid">Annuleren</a> |
     </div>
    }
    <a asp-action="Index">Terug naar de lijst</a>

</div>
